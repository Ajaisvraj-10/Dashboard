-size: cover;\r\n    background-repeat: no-repeat;\"\r\n  >\r\n    <div class=\"\" style=\"position:absolute;top:20px;left:20px;\">\r\n                <img src=\"/img/logo.png\" style=\"max-width:60px;\" />\r\n    </div>\r\n    <div class=\"\" style=\"max-width:740px;\">\r\n      <div class=\"\">\r\n        \r\n        <div class=\"row\">\r\n           <b-col\r\n            md=\"6\"\r\n            style=\"display: flex;align-items: center;\">\r\n            <img src=\"/img/login.png\">\r\n            \r\n          </b-col>\r\n          <div class=\"col-md-6\">\r\n            <div class=\"signin-card\">\r\n              \r\n              <h1 class=\"mb-4 text-white text-20 font-weight-700 text-center\">Sign In</h1>\r\n\r\n              <b-form @submit.prevent=\"formSubmit\" ref=\"login_form\" v-if=\"login_type=='email'\">\r\n                <b-form-group label=\"Email Address\" class=\"text-12\">\r\n                  <b-form-input\r\n                    class=\"form-control-rounded\"\r\n                    type=\"text\"\r\n                    name=\"email\"\r\n                    v-model=\"email\"\r\n                    email\r\n                    required\r\n                  ></b-form-input>\r\n                </b-form-group>\r\n\r\n                <b-form-group label=\"Password\" class=\"text-12\">\r\n                  <b-form-input\r\n                    class=\"form-control-rounded\"\r\n                    type=\"password\"\r\n                    name=\"password\"\r\n                    v-model=\"password\"\r\n                  ></b-form-input>\r\n                </b-form-group>\r\n\r\n                <h6 class=\"text-white cursor-pointer text-center w-100 text-10 mb-0\" @click=\"login_type='otp'\">OTP Login</h6>\r\n               \r\n                <b-button\r\n                  type=\"submit\"\r\n                  tag=\"button\"\r\n                  class=\"btn-rounded btn-block mt-2\"\r\n                  variant=\"primary mt-4\"\r\n                  :disabled=\"loading\"\r\n                >\r\n                  SignIn\r\n                </b-button>\r\n                <div v-once class=\"typo__p\" v-if=\"loading\">\r\n                  <div class=\"spinner sm spinner-primary mt-3\"></div>\r\n                </div>\r\n                \r\n              </b-form>\r\n\r\n              <b-form @submit.prevent=\"verifyOTP\" ref=\"login_form\" v-else-if=\"login_type=='otp'\">\r\n                <b-form-group label=\"Phone Number\" class=\"text-12\">\r\n                  <b-form-input\r\n                    class=\"form-control-rounded\"\r\n                    type=\"number\"\r\n                    name=\"phone\"\r\n                    v-model=\"phone\"\r\n                    required\r\n                  ></b-form-input>\r\n                </b-form-group>\r\n                <h6 class=\"text-white cursor-pointer text-right w-100 text-10 mb-0\" @click=\"phone?sendOTP():showAlert('Please enter your phone number','red')\" v-if=\"current_otp\">Resend otp</h6>\r\n\r\n                \r\n                <div class=\"otp-input-fields\" :style=\"current_otp?'':'opacity:0.5'\" v-show=\"current_otp\">\r\n                  <input type=\"number\" class=\"otp__digit otp__field__1\" id=\"otp1\" @keydown=\"$event.target.value.length>0?$event.target.value='':''\" @keyup=\"setOtp(1)\">\r\n                  <input type=\"number\" class=\"otp__digit otp__field__2\" id=\"otp2\" @keydown=\"$event.target.value.length>0?$event.target.value='':''\" @keyup=\"setOtp(2)\">\r\n                  <input type=\"number\" class=\"otp__digit otp__field__3\" id=\"otp3\" @keydown=\"$event.target.value.length>0?$event.target.value='':''\" @keyup=\"setOtp(3)\">\r\n                  <input type=\"number\" class=\"otp__digit otp__field__4\" id=\"otp4\" @keydown=\"$event.target.value.length>0?$event.target.value='':''\" @keyup=\"setOtp(4)\">\r\n                </div>\r\n\r\n                <h6 class=\"text-white cursor-pointer text-center w-100 text-10 my-2\" @click=\"login_type='email'\">Email Login</h6>\r\n               \r\n                <b-button\r\n                  type=\"submit\"\r\n                  tag=\"button\"\r\n                  id=\"verify_btn\"\r\n                  class=\"btn-rounded btn-block mt-2\"\r\n                  variant=\"primary mt-4\"\r\n                  :disabled=\"loading\"\r\n                  v-show=\"current_otp\"\r\n                >\r\n                  Verify OTP\r\n                </b-button>\r\n                <b-button\r\n                  type=\"button\"\r\n                  tag=\"button\"\r\n                  id=\"verify_btn\"\r\n                  class=\"btn-rounded btn-block mt-2\"\r\n                  variant=\"primary mt-4\"\r\n                  @click=\"phone?sendOTP():showAlert('Please enter your phone number','red')\"\r\n                  v-show=\"!current_otp\"\r\n                >\r\n                  Send OTP\r\n                </b-button>\r\n                <div v-once class=\"typo__p\" v-if=\"loading\">\r\n                  <div class=\"spinner sm spinner-primary mt-3\"></div>\r\n                </div>\r\n                \r\n              </b-form>\r\n\r\n              \r\n            </div>\r\n          </div>\r\n\r\n         \r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n<script>\r\nimport { mapGetters, mapActions } from \"vuex\";\r\nexport default {\r\n  metaInfo: {\r\n    // if no subcomponents specify a metaInfo.title, this title will be used\r\n    title: \"SignIn\"\r\n  },\r\n  data() {\r\n    return {\r\n      email: \"\",\r\n      password: \"\",\r\n      login_type:'otp',\r\n      phone:'',\r\n      otp:'',\r\n      current_otp:'',\r\n      bgImage: require(\"@/assets/images/photo-wide-4.jpg\"),\r\n      logo: require(\"@/assets/images/logo.png\"),\r\n      signInImage: require(\"@/assets/images/photo-long-3.jpg\")\r\n    };\r\n  },\r\n  computed: {\r\n    ...mapGetters([\"loggedInUser\", \"loading\", \"error\"])\r\n  },\r\n  methods: {\r\n    ...mapActions([\"login\"]),\r\n    formSubmit() {\r\n      var formdata = new FormData(this.$refs['login_form'])\r\n        fetch(this.api_url+'/users/obtain_token/', {\r\n            method : 'post',\r\n            body : formdata\r\n        })\r\n        .then((response) => {\r\n            return response.json()\r\n        })\r\n        .then((jsonData) => {\r\n          if(jsonData.access){\r\n            localStorage.setItem(\"userInfo\", JSON.stringify(jsonData));\r\n            this.$root.token = jsonData.access\r\n            if(this.$root.token==''){\r\n                localStorage.removeItem(\"userInfo\");\r\n            }else{\r\n                this.showAlert('Login Successfully!')\r\n                var self = this\r\n                setTimeout(function(){\r\n                    window.location.href = '/';\r\n                },50);\r\n            }\r\n          }else{\r\n            this.showAlert(jsonData.detail,'red')\r\n              localStorage.removeItem(\"userInfo\");\r\n          }\r\n        })\r\n    },\r\n    setOtp(position){\r\n      var value = document.getElementById('otp'+position).value\r\n      if(value){\r\n        if(position==4){\r\n          document.getElementById('verify_btn').focus()\r\n        }else{\r\n          document.getElementById('otp'+(position+1)).focus()\r\n        }\r\n      }\r\n      this.otp = ''\r\n      for(var o=1;o<=4;o++){\r\n        this.otp = this.otp+document.getElementById('otp'+o).value\r\n      }\r\n    },\r\n    sendOTP() {\r\n      if(this.phone.length!=10){\r\n        this.showAlert('Enter 10 digit number!','red')\r\n        return false\r\n      }\r\n      var formdata = new FormData()\r\n      formdata.append('phone',this.phone)\r\n        formdata.append('device_type','web')\r\n      fetch(this.api_url+'/employee/send_otp/', {\r\n          method : 'post',\r\n          body : formdata\r\n      })\r\n      .then((response) => {\r\n          return response.json()\r\n      })\r\n      .then((jsonData) => {\r\n        if(jsonData.success){\r\n          this.current_otp = jsonData.otp\r\n          // alert(jsonData.otp)\r\n          document.getElementById('otp1').focus()\r\n          this.showAlert(jsonData.message)\r\n        }else{\r\n          this.showAlert(jsonData.message,'red')\r\n        }\r\n      })\r\n    },\r\n    verifyOTP() {\r\n      var formdata = new FormData()\r\n      formdata.append('otp',this.otp)\r\n      formdata.append('phone',this.phone)\r\n      formdata.append('current_otp',this.current_otp)\r\n      formdata.append('user_type','web')\r\n      fetch(this.api_url+'/employee/verify_otp/', {\r\n          method : 'post',\r\n          body : formdata\r\n      })\r\n      .then((response) => {\r\n          return response.json()\r\n      })\r\n      .then((jsonData) => {\r\n        var user_data = jsonData.data\r\n        if(user_data.access){\r\n            localStorage.setItem(\"userInfo\", JSON.stringify(user_data));\r\n            this.$root.token = user_data.access\r\n            if(this.$root.token==''){\r\n                localStorage.removeItem(\"userInfo\");\r\n            }else{\r\n                this.showAlert('Login Successfully!')\r\n                var self = this\r\n                setTimeout(function(){\r\n                    window.location.href = '/';\r\n                },50);\r\n            }\r\n          }else{\r\n            this.showAlert(user_data.detail,'red')\r\n              localStorage.removeItem(\"userInfo\");\r\n          }\r\n      })\r\n\r\n    },\r\n    makeToast(variant = null, msg) {\r\n      this.$bvToast.toast(msg, {\r\n        title: ` ${variant || \"default\"}`,\r\n        variant: variant,\r\n        solid: true\r\n      });\r\n    }\r\n  },\r\n  watch: {\r\n    loggedInUser(val) {\r\n      if (val && val.uid && val.uid.length > 0) {\r\n        this.makeToast(\"success\", \"Successfully Logged In\");\r\n\r\n        setTimeout(() => {\r\n          this.$router.push(\"/\");\r\n        }, 500);\r\n      }\r\n    },\r\n    error(val) {\r\n      if (val != null) {\r\n        this.makeToast(\"warning\", val.message);\r\n      }\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style>\r\n.spinner.sm {\r\n  height: 2em;\r\n  width: 2em;\r\n}\r\n.signin-card{\r\n    background: linear-gradient(360deg, #7b8fffad, #ad7fffc9), url(https://www.biowinkerala.com/img/bg/bg-image-50.jpg);\r\n    border-radius: 20px;\r\n    padding: 60px 30px 80px 30px;\r\n     background-repeat: no-repeat;\r\n        background-size: cover;\r\n}\r\n  legend {\r\n    color: white;\r\n}\r\n\r\n\r\n.otp-input-fields {\r\n  margin: auto;\r\n  max-width: 400px;\r\n  width: auto;\r\n  display: flex;\r\n  justify-content: center;\r\n  gap: 10px;\r\n  \r\n}\r\n.otp-input-fields input {\r\n  border:none;\r\n  height: 40px;\r\n  width: 40px;\r\n  border-radius: 15px;\r\n  text-align: center;\r\n  outline: none;\r\n  font-size: 15px;\r\n}\r\n.otp-input-fields input::-webkit-outer-spin-button, .otp-input-fields input::-webkit-inner-spin-button {\r\n  -webkit-appearance: none;\r\n  margin: 0;\r\n}\r\n.otp-input-fields input[type=number] {\r\n  -moz-appearance: textfield;\r\n}\r\n</style>\r\n"]}]}