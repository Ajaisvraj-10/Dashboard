center justify-content-between \">\r\n                      <div class=\"flex-align3\" style=\"gap:15px;\">\r\n                        <template v-if=\"plan.id==current_plan.id\">\r\n                          <i class=\"fa fa-check  flex-align2 rounded-circle\" style=\"width:22px;height:22px;background-color:#ffd376;color: #382d15;font-size: 12px;\"></i>\r\n                        </template>\r\n                        <template v-else>\r\n                          <i class=\" flex-align2 rounded-circle text-white\" style=\"width:22px;height:22px;cursor:pointer;border:2px solid #ffd376;font-size: 12px;\"></i>\r\n                        </template>\r\n                        <div class=\"text-white font-weight-400  text-14\" style=\"opacity:.8;white-space: nowrap;\">\r\n                          {{plan.duration}} {{plan.date_type}} plan\r\n                        </div>\r\n                        \r\n                      </div>\r\n                      <div class=\"flex-align3\" >\r\n                        \r\n                        <div class=\" px-3 text-white  text-12 font-weight-300\">\r\n                          {{plan.description}}\r\n\r\n                        </div>\r\n                        <div class=\"text-14\">\r\n                           <!-- <sup class=\" \">â‚¹999</sup> -->\r\n                           <span class=\" text-20 font-weight-400 \" style=\"color:#ffd376;\">{{plan.currency_symbol}}{{plan.price}}</span>\r\n                        </div>\r\n                        \r\n                      </div>\r\n                    </div>\r\n                  </div>\r\n                  \r\n                </div>\r\n\r\n                <button class=\"btn btn-primary w-100 rounded2 py-2\" v-if=\"current_plan.id\" @click=\"getPaymentMethods();crnt_tab='payment_methods'\">Continue with {{current_plan.currency_symbol}}{{current_plan.price}}</button>\r\n\r\n              </div>\r\n\r\n            </div>\r\n          </div>\r\n          <div class=\"pl