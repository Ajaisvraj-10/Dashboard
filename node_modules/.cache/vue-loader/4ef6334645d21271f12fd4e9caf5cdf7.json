ton>\r\n        </div>\r\n      </div>\r\n      <div class=\"my-2 border-top\"></div>\r\n    </div>\r\n    <!-- <div class=\"wrapper\"> -->\r\n   \r\n    <div class=\"main-scroll\" style=\"overflow-y:hidden;min-width:101%;\">\r\n      <draggable\r\n          class=\"d-flex\"\r\n          :list=\"process_details\"\r\n          @change=\"draggContents()\"\r\n          handle=\".drag_process\"\r\n      >\r\n        <div class=\" p-1\" v-for=\"process_detail in process_details\" style=\"margin:0 auto\" :style=\"max_width<33 && is_edit==process_detail.id?'max-width:33%;flex: 0 0 33%':'max-width:'+max_width+'%;flex: 0 0 '+max_width+'%'\">\r\n      \r\n          <div class=\"card p-0 pb-2 my-1\" :style=\"process_detail.is_hide?'opacity:0.4':''\">\r\n            <div class=\"process_kanban px-3 py-2\" style=\"height:80vh\">\r\n              <form :id=\"'process_detail_form'+process_detail.id\">\r\n                <div class=\"text-right\" @click=\"is_edit && is_edit==process_detail.id?is_edit=null:is_edit=process_detail.id\">\r\n                  <div class=\"text-info\" style=\"float:left\"><b>#{{process_detail.sort_order}} <small>({{process_detail.id}})</small></b></div>\r\n                  <span class=\"text-info cursor-pointer\" @click=\"copied_process=process_detail;showAlert('Copied','blue')\">Coppy\r\n                  </span>\r\n                  <b-button variant=\"success\" type=\"button\" class=\" px-3 py-1 mx-1\" @click=\"saveProcess(process_detail)\">Save\r\n                  </b-button>\r\n                  <span class=\"pl-2 pt-2 cursor-pointer drag_process\">\r\n                    <i class=\"fa fa-arrows\" style=\"font-size:16px\"></i>\r\n                  </span>\r\n                </div>\r\n                <div>\r\n                  <input type=\"hidden\" name=\"production_process\" v-model=\"process_detail.production_process\">\r\n                  <input type=\"hidden\" name=\"sort_order\" v-model=\"process_detail.sort_order\">\r\n                </div>\r\n                <div class=\"mb-2\">\r\n                  <div> Name: </div>\r\n                  <input type=\"text\" name=\"name\" v-model=\"process_detail.name\" class=\"form-control\" required>\r\n                </div>\r\n                <div class=\"px-2\">\r\n                  <div class=\" mb-2\">\r\n                    <b-form-checkbox v-model=\"process_detail.is_hide\" name=\"is_hide\" class=\"text-danger\">\r\n                      Hide: <b>{{process_detail.is_hide?'Yes':'No'}}</b>\r\n                    </b-form-checkbox>\r\n                  </div>\r\n                  <div class=\" mb-2\">\r\n                    <b-form-checkbox v-model=\"process_detail.is_machine\" name=\"is_machine\">\r\n                      Machine: <b>{{ process_detail.is_machine?'Yes':'No' }}</b>\r\n                    </b-form-checkbox>\r\n                  </div>\r\n                  <div class=\" mb-2\">\r\n                    <b-form-checkbox v-model=\"process_detail.is_blanching\" name=\"is_blanching\">\r\n                      Blanching: <b>{{ process_detail.is_blanching?'Yes':'No' }}</b>\r\n                    </b-form-checkbox>\r\n                  </div>\r\n                  <div class=\" mb-2\">\r\n                    <b-form-checkbox v-model=\"process_detail.have_barrel\" name=\"have_barrel\">\r\n                      Barrel: <b>{{ process_detail.have_barrel?'Yes':'No' }}</b>\r\n                    </b-form-checkbox>\r\n                  </div>\r\n                  <div class=\" mb-2\">\r\n                    <b-form-checkbox v-model=\"process_detail.barrel_input\" name=\"barrel_input\">\r\n                      Barrel Input: <b>{{ process_detail.barrel_input?'Yes':'No' }}</b>\r\n                    </b-form-checkbox>\r\n                  </div>\r\n                  <div class=\" mb-2\">\r\n                    <b-form-checkbox v-model=\"process_detail.is_dryer\" name=\"is_dryer\">\r\n                      Dryer (Coffee): <b>{{ process_detail.is_dryer?'Yes':'No' }}