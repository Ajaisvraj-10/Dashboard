x v-model=\"process_detail.is_powdering\" name=\"is_powdering\">\r\n                      Powdering: <b>{{ process_detail.is_powdering?'Yes':'No' }}</b>\r\n                    </b-form-checkbox>\r\n                  </div>\r\n                  <div class=\" mb-2\">\r\n                    <b-form-checkbox v-model=\"process_detail.is_sorting\" name=\"is_sorting\">\r\n                      Sorting: <b>{{ process_detail.is_sorting?'Yes':'No' }}</b>\r\n                    </b-form-checkbox>\r\n                  </div>\r\n                  <div class=\" mb-2\">\r\n                    <b-form-checkbox v-model=\"process_detail.mix_output\" name=\"mix_output\">\r\n                      Mixed output: <b>{{ process_detail.mix_output?'Yes':'No' }}</b>\r\n                    </b-form-checkbox>\r\n                  </div>\r\n                  <div class=\" mb-2\">\r\n                    <b-form-checkbox v-model=\"process_detail.single_input\" name=\"single_input\">\r\n                      Single input: <b>{{ process_detail.single_input?'Yes':'No' }}</b>\r\n                    </b-form-checkbox>\r\n                  </div>\r\n                  <div class=\" mb-2\">\r\n                    <b-form-checkbox v-model=\"process_detail.auto_input\" name=\"auto_input\">\r\n                      Auto input: <b>{{ process_detail.auto_input?'Yes':'No' }}</b>\r\n                    </b-form-checkbox>\r\n                  </div>\r\n                  <div class=\" mb-2\">\r\n                    <b-form-checkbox v-model=\"process_detail.auto_output\" name=\"auto_output\">\r\n                      Auto output: <b>{{ process_detail.auto_output?'Yes':'No' }}</b>\r\n                    </b-form-checkbox>\r\n                  </div>\r\n                  <div class=\" mb-2\">\r\n                    <b-form-checkbox v-model=\"process_detail.is_sieving\" name=\"is_sieving\">\r\n                      Sieving: <b>{{ process_detail.is_sieving?'Yes':'No' }}</b>\r\n                    </b-form-checkbox>\r\n                  </div>\r\n                </div>\r\n                <div class=\"mb-2\">\r\n                  <div> Inputs: </div>\r\n                  <div class=\"border border-success border-rounded\">\r\n                    <label class=\"w-100 badge-success cursor-pointer p-1\" v-for=\"parameter in parameters\" v-if=\"production_process.product.includes(parameter.product) && (!parameter.attribute || !parameter.siev)\">\r\n                      <b-form-checkbox v-model=\"process_detail.inputs\" name=\"inputs\" :value=\"parameter.id\">\r\n                        <span class=\" cursor-pointer\"><b>{{parameter.name}}</b></span>\r\n                      </b-form-checkbox>\r\n                    </label>\r\n                  </div>\r\n                </div>\r\n                <div class=\"mb-2\">\r\n                  <div> Outputs: </div>\r\n                  <div class=\"border border-danger border-rounded\">\r\n                    <label class=\"w-100 border badge-danger cursor-pointer p-1\" v-for=\"parameter in parameters\" v-if=\"production_process.product.includes(parameter.product) && (!parameter.attribute || !parameter.siev)\">\r\n                      <b-form-checkbox v-model=\"process_detail.outputs\" name=\"outputs\" :value=\"parameter.id\">\r\n                        <span class=\" cursor-pointer\"><b>{{parameter.name}}</b></span>\r\n                      </b-form-checkbox>\r\n                    </label>\r\n                  </div>\r\n                </div>\r\n                <div class=\"mb-2\">\r\n                  <div> Warehouse: </div>\r\n                  <select name=\"warehouse\" v-model=\"process_detail.warehouse\" class=\"form-control\">\r\n                    <option v-for=\"warehouse in warehouses\" :value=\"warehouse.id\">{{warehouse.name}}</option>\r\n                  </select>\r\n                </div>\r\n                <div class=\"mb-2\">\r\n                  <div> Next Processes: </div>\r\n                  <select name=\"next_proces