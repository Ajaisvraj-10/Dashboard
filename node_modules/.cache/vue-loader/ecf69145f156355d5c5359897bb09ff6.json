r\n                    <b-dropdown-divider></b-dropdown-divider>\r\n                    <h6 class=\"mb-0 py-2 px-3\">\r\n                      <h6>Pick a date</h6>\r\n                      <input type=\"date\" :name=\"current_task.due_date?'due_date':''\" v-model=\"current_task.due_date\" @change=\"updateFormdata2()\">\r\n                    </h6>\r\n                    <b-dropdown-divider></b-dropdown-divider>\r\n                    <b-dropdown-item >\r\n                      <h6 class=\"text-danger mb-0 cursor-pointer\" @click=\"current_task.due_date='';updateFormdata2()\">Remove Due date</h6>\r\n                    </b-dropdown-item>\r\n                  </b-dropdown>\r\n                </div>\r\n              </div>\r\n              <div class=\"sidebar-tab\">\r\n                <div id=\"app7\">\r\n                  <b-dropdown  no-caret>\r\n                    <template #button-content>\r\n                      <div class=\"d-flex align-items-center\" style=\"gap:10px;\">\r\n                        <i class=\"fa fa-level-up\"></i>\r\n                        <h5 class=\"mb-0 font-weight-600\">Priority</h5>\r\n                      </div>\r\n                      <div>\r\n                        <span class=\"badge\"\r\n                          :class=\"current_task.priority=='Urgent'?'badge-danger':current_task.priority=='Medium'?'badge-success':current_task.priority=='Normal'?'badge-primary':'badge-light'\"\r\n                        > {{current_task.priority}}</span>\r\n                      </div>\r\n                    </template>\r\n                    <h6 class=\"text-center text-dark mb-0 p-3 pb-0\">Priority</h6>\r\n                    <b-dropdown-divider></b-dropdown-divider>\r\n                    <b-dropdown-item v-for=\"priority in priorities\" @click=\"current_task.priority=priority;updateFormdata2()\" :active=\"current_task.priority==priority\">\r\n                      <h6 class=\"mb-0\">{{priority}}</h6>\r\n                    </b-dropdown-item>\r\n                    <b-dropdown-divider></b-dropdown-divider>\r\n                    <b-dropdown-item >\r\n                      <h6 class=\"text-danger mb-0 cursor-pointer\" @click=\"current_task.priority='';updateFormdata2()\">\r\n                        Remove Priority\r\n                        <input type=\"hidden\" name=\"priority\" v-model=\"current_task.priority\">\r\n                      </h6>\r\n                    </b-dropdown-item>\r\n                  </b-dropdown>\r\n                </div>\r\n              </div>\r\n            </div>\r\n            <div v-show=\"current_task.user!=userId\">\r\n              <div class=\"sidebar-tab\">\r\n                <div class=\"d-flex align-items-start\" style=\"gap:10px;\">\r\n                  <i class=\"fa fa-pencil\"></i>\r\n                  <textarea placeholder=\"Add note\" class=\"w-100 text-area\" name=\"note\" v-model=\"current_task.note\" style=\"border: none;background: #ebf6fe;\"></textarea>\r\n                </div>\r\n              </div>\r\n              <div class=\"sidebar-tab\">\r\n                <div class=\"d-flex align-items-center\" style=\"gap:10px;\">\r\n                  <i class=\"fa fa-paperclip\"></i>\r\n                  <h5 class=\"mb-0 font-weight-600\">Add File</h5>\r\n                </div>\r\n                <input type=\"file\" name=\"image\" style=\"opacity:0;z-index:99;position:absolute;top:0;left:0;width:100%;height:100%;\">\r\n              </div>\r\n            </div>\r\n            <div class=\"todo-add text-right p-2\" v-if=\"current_task.user==userId\">\r\n              <b class=\"mx-2 text-info\" v-if=\"current_task.status!='Completed' || current_task.is_completed\">{{current_task.status}}</b>\r\n              <button class=\"btn btn-success\" type=\"button\" @click=\"finishTask()\" v-else><i class=\"fa fa-check-circle\"></i> Complete</button>\r\n            </div>\r\n            <div class=\"todo-add text-right p-2\" v-else>\r\n              <button class=\"btn btn-success\" type=\"submit\">+ Save</button>\r\n            </div>\r\n          </form>\r\n          <div class=\"empty-task p-3\" v-else-if=\"new_task\">\r\n            <img src=\"/img/add-img.webp\">\r\n            <div class=\"text-center\">\r\n              <h5>Add a task</h5>\r\n              <p>Add  task from your website left tab</p>\r\n            </div>\r\n          </div>\r\n        </b-card>\r\n      </div>\r\n      \r\n    </div>\r\n  </div>  \r\n</template>\r\n<script>\r\nexport default {\r\n  metaInfo: {\r\n   \r\n  },\r\n  data() {\r\n    return {\r\n      tasks:[],\r\n      users:[],\r\n      new_task:{is_completed:false, due_date:'', remider_date:'', repeat:'None', priority:'Normal'},\r\n      new_sub_task:{is_completed:false, due_date:'', remider_date:'', repeat:'None', priority:'Normal'},\r\n      current_task:{is_completed:false, not_deleted:1},\r\n      repeats:['None','Dialy','Weekly','Monthly','Yearly'],\r\n      task_categories:['my_tasks','assigned_tasks_to_me','completed_tasks'],\r\n      priorities:['Urgent','Medium','Normal'],\r\n      current_task_category:'my_tasks',\r\n      new_task:true,\r\n      toggle:false,\r\n    };\r\n  },\r\n  mounted() {\r\n    this.$root.current_section = 'task'\r\n    this.getTasks()\r\n    this.getUsers()\r\n  },\r\n  methods: {\r\n    reloadTasks(){\r\n      this.getTasks()\r\n    },\r\n    selectTaskCat(task_category){\r\n      this.current_task_category=task_category\r\n      this.tasks = []\r\n      this.current_task = {}\r\n      this.getTasks()\r\n    },\r\n    getDateIs(type='Today', action=''){\r\n      var today = new Date\r\n      var date = ''\r\n      if(type=='Today'){\r\n        date = today.setDate(today.getDate())\r\n      }\r\n      if(type=='Tomorrow'){\r\n        date=today.setDate(today.getDate() + 1);\r\n      }\r\n      if(type=='Next Week'){\r\n        date=today.setDate(today.getDate() + 7);\r\n      }\r\n      if(action=='click'){\r\n        return this.currentDate(date)\r\n      }\r\n      return this.dateFormate(date)\r\n    },\r\n    getTasks() {\r\n      var headers = new Headers();\r\n      headers.append(\"Authorization\", \"Bearer \"+this.$root.token);\r\n      fetch(this.api_url+'/employee/tasks/?task_type='+this.current_task_category, {\r\n          method : 'get',\r\n          headers: headers,\r\n      })\r\n      .then((response) => {\r\n          return response.json()\r\n      })\r\n      .then((jsonData) => {\r\n        this.tasks = jsonData\r\n      })\r\n    },\r\n    selectTask(task){\r\n      var self = this\r\n      this.new_task = false\r\n      if(task.user!=this.userId && !task.assign_task.includes(this.userId)){\r\n        this.showAlert('Status is '+task.status,'yellow')\r\n        return false\r\n      }\r\n      self.current_task = {}\r\n      setTimeout(function(){\r\n        self.current_task = task\r\n      },0)\r\n    },\r\n    createFormdata(task={id:null}) {\r\n      var formdata = new FormData(this.$refs['newForm'])\r\n      if(task.id){\r\n        formdata = new FormData(document.getElementById('newSubForm'+task.id))\r\n        formdata.append('main_task', task.id)\r\n      }\r\n      formdata.append('user', this.userId)\r\n      formdata.append('not_deleted', 1)\r\n      var headers = new Headers();\r\n      headers.append(\"Authorization\", \"Bearer \"+this.$root.token);\r\n      fetch(this.api_url+'/employee/tasks/', {\r\n          method : 'POST',\r\n          body : formdata,\r\n          headers: headers,\r\n      })\r\n      .then((response) => {\r\n          return response.json()\r\n      })\r\n      .then((jsonData) => {\r\n        if(jsonData.id>0){\r\n          this.new_task={is_completed:false, due_date:'', remider_date:'', repeat:'None'}\r\n          this.new_sub_task={is_completed:false, due_date:'', remider_date:'', repeat:'None'}\r\n          this.current_task = jsonData\r\n          this.updateSubTask()\r\n          this.showAlert('Added Successfully!')\r\n        }else{\r\n          this.showAlert('Something Wrong!')\r\n        }\r\n      })\r\n    },\r\n    updateFormdata() {\r\n      var formdata = new FormData(this.$refs['dataForm'])\r\n      formdata.append('user', this.current_task.user)\r\n      var headers = new Headers();\r\n      headers.append(\"Authorization\", \"Bearer \"+this.$root.token);\r\n      fetch(this.api_url+'/employee/tasks/'+this.current_task.id+'/', {\r\n          method : 'PUT',\r\n          body : formdata,\r\n          headers: headers,\r\n      })\r\n      .then((response) => {\r\n          return response.json()\r\n      })\r\n      .then((jsonData) => {\r\n        if(jsonData.id>0){\r\n          this.current_task = jsonData\r\n          if(this.current_task.not_deleted){\r\n            this.updateSubTask()\r\n          }else{\r\n            this.showAlert('Task Deleted!','red')\r\n            this.getTasks()\r\n          }\r\n        }else{\r\n          this.showAlert('Something Wrong!')\r\n        }\r\n      })\r\n    },\r\n    updateSubTask(){\r\n      var formdata = new FormData()\r\n      formdata.append('task', this.current_task.id)\r\n      var headers = new Headers();\r\n      headers.append(\"Authorization\", \"Bearer \"+this.$root.token);\r\n      fetch(this.api_url+'/employee/update_sub_tasks/', {\r\n          method : 'POST',\r\n          body : formdata,\r\n          headers: headers,\r\n      })\r\n      .then((response) => {\r\n          return response.json()\r\n      })\r\n      .then((jsonData) => {\r\n        if(jsonData.id>0){\r\n          this.current_task = jsonData\r\n          this.getTasks()\r\n          this.showAlert('Done!','blue')\r\n        }\r\n      })\r\n    },\r\n    deleteTask(confirm=true){\r\n      if(confirm){\r\n        this.$swal({\r\n          title: \"Delete Task\",\r\n          text: 'Are you sure?',\r\n          showCancelButton: true,\r\n          confirmButtonColor: \"#3085d6\",\r\n          cancelButtonColor: \"#d33\",\r\n          confirmButtonText: \"Yes\",\r\n          cancelButtonText: \"No\",\r\n        }).then(result => {\r\n          if (result.value) {\r\n            this.deleteTask(false)\r\n          }\r\n        });\r\n        return false\r\n      }\r\n      if(this.current_task.user==this.userId){\r\n        this.current_task.not_deleted=0\r\n      }\r\n      this.updateFormdata2()\r\n    },\r\n    completeTask(task, confirm=true){\r\n      if(task.user==this.userId || !task.assign_task.includes(this.userId)){\r\n        this.showAlert('Status is '+task.status,'yellow')\r\n        return false\r\n      }\r\n      if(confirm){\r\n        this.$swal({\r\n          title: \"Completed Task\",\r\n          text: 'Are you sure?',\r\n          showCancelButton: true,\r\n          confirmButtonColor: \"#3085d6\",\r\n          cancelButtonColor: \"#d33\",\r\n          confirmButtonText: \"Yes\",\r\n          cancelButtonText: \"No\",\r\n        }).then(result => {\r\n          if (result.value) {\r\n            this.completeTask(task, false)\r\n          }\r\n        });\r\n        return false\r\n      }\r\n      task.status='Completed'\r\n      this.current_task = task\r\n      this.updateFormdata2()\r\n    },\r\n    finishTask(confirm=true){\r\n      if(this.current_task.user!=this.userId){\r\n        return false\r\n      }\r\n      if(confirm){\r\n        this.$swal({\r\n          title: \"Finish Task\",\r\n          text: 'Are you sure?',\r\n          showCancelButton: true,\r\n          confirmButtonColor: \"#3085d6\",\r\n          cancelButtonColor: \"#d33\",\r\n          confirmButtonText: \"Yes\",\r\n          cancelButtonText: \"No\",\r\n        }).then(result => {\r\n          if (result.value) {\r\n            this.finishTask(false)\r\n          }\r\n        });\r\n        return false\r\n      }\r\n      this.current_task.is_completed = 1\r\n      this.updateFormdata2()\r\n    },\r\n    getUsers() {\r\n      var headers = new Headers();\r\n      headers.append(\"Authorization\", \"Token \"+this.$root.token);\r\n      fetch(this.api_url+'/users/users/', {\r\n          method : 'get',\r\n          headers: headers,\r\n      })\r\n      .then((response) => {\r\n          return response.json()\r\n      })\r\n      .then((jsonData) => {\r\n        this.users = jsonData\r\n      })\r\n    },\r\n    selectUser(user,ukey){\r\n      if(this.current_task.assign_task.includes(user.id)){\r\n        var index = this.current_task.assign_task.indexOf(user.id)\r\n        this.current_task.assign_task.splice(index, 1);\r\n        this.current_task.assign_users.splice(index, 1);\r\n      }else{\r\n        this.current_task.assign_task.push(user.id)\r\n        this.current_task.assign_users.push({id:user.id, username:user.username})\r\n      }\r\n      this.updateFormdata2()\r\n      // var self = this\r\n      // setTimeout(function(){\r\n      //   self.$refs.assign_task_drpdwn.show(true)\r\n      // },0)\r\n    },\r\n    addSubTask(task){\r\n      this.new_sub_task = {\r\n        is_completed:false,\r\n        due_date:task.due_date,\r\n        remider_date:task.remider_date,\r\n        repeat:task.repeat,\r\n        priority:task.priority,\r\n      }\r\n      this.focusInput('add_sub_task'+task.id)\r\n    },\r\n    updateFormdata2(){\r\n      var self = this\r\n      setTimeout(function(){\r\n        self.updateFormdata()\r\n      },50)\r\n    },\r\n    focusInput(input_id){\r\n      setTimeout(function(){\r\n        document.getElementById(input_id).focus()\r\n      },50)\r\n    },\r\n  },\r\n};\r\n</script>\r\n<style >\r\n  @import 'styles/style.css';\r\n</style>"]}]}