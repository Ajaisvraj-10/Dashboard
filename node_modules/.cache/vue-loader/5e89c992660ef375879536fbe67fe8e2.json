\n                <div class=\"choosed-btn\" >\r\n                      \r\n                      <template v-if=\"plan.id==current_plan.id\">\r\n                        <h6 class=\"choose-h\">Choosed</h6>\r\n                      </template>\r\n                      <template v-else>\r\n                        \r\n                        <h6 style=\"display:none;\" @click=\"current_plan=plan\">Choose</h6>\r\n                      </template>\r\n                </div>\r\n                <div class=\" position-relative mx-auto\" >\r\n                  \r\n                  <div class=\"flex-align mb-4\" v-if=\"false\">\r\n                    <div class=\"rounded2 bg-info p-1 text-white font-weight-600 text-12\">\r\n                      LIMITED PERIOD OFFER\r\n                    </div>\r\n                    <div class=\"rounded2 btn-outline-danger p-1  font-weight-600 text-12\" style=\"border: 1px solid red;\">\r\n                      Save 30%\r\n                    </div>\r\n                  </div>\r\n                  <div class=\"d-flex align-items-center justify-content-between \">\r\n                    <div >\r\n                      <div class=\"text-white font-weight-600  text-14\">\r\n                        {{plan.duration}} {{plan.date_type}} plan\r\n                      </div>\r\n                      \r\n                    </div>\r\n                    \r\n                  </div>\r\n                </div>\r\n                <div class=\"rounded2-bottom  pt-3 text-center text-white text-14 font-weight-500\" >\r\n                  <div class=\"text-12\">\r\n                    {{plan.description}}\r\n                  </div>\r\n                  <div class=\"text-12 mt-3\">\r\n                         <!-- <sup class=\"text-white \">â‚¹999</sup> --><span class=\"text-white text-24 font-weight-700 \">{{plan.currency_symbol}}{{plan.price}}</span>\r\n                  </div>\r\n                </div>\r\n\r\n              </div>\r\n\r\n              \r\n\r\n            </div>\r\n            <div class=\"col-md-12 plan-card-col\">\r\n              <h6 class=\"text-20 font-weight-700 text-white my-2 mb-4\">Watch Ad-free with {{current_plan.name}}</h6>\r\n              <div class=\"plan-items\">\r\n                <h6 class=\"plans\">2800+ Blockbuster Movies</h6>\r\n                <i class=\"fa fa-check\"></i>\r\n\r\n              </div>\r\n              \r\n              <div class=\"plan-items\">\r\n                <h6 class=\"plans\">150+ Web Series</h6>\r\n                <i class=\"fa fa-check\"></i>\r\n\r\n\r\n              </div>\r\n              <div class=\"plan-items\">\r\n                <h6 class=\"plans\">{{current_plan.device}} Device</h6>\r\n                <i class=\"fa fa-check\"></i>\r\n\r\n              </div>\r\n              <div class=\"plan-items\">\r\n                <h6 class=\"plans\">{{current_plan.description}}</h6>\r\n                <i class=\"fa fa-info-check\"></i>\r\n\r\n              </div>\r\n            </div>\r\n            <div class=\"purchase-button\">\r\n              <button class=\"btn btn-danger w-100  py-2\" v-if=\"current_plan.id\" @click=\"getPaymentMethods();crnt_tab='payment_methods'\">Continue with {{current_plan.currency_symbol}}{{current_plan.price}}</button>\r\n            </div>\r\n\r\n          </div>\r\n        </div>\r\n        <div class=\"plan-sec2 px-3 mt-5\" v-if=\"crnt_tab=='payment_methods'\">\r\n          <!--<h6 class=\"text-white text-11 font-weight-400 mb-2\">Step 2 of 3</h6>\r\n          <h6 class=\"text-white text-14 font-weight-500 mb-2\">Payment Methods</h6>-->\r\n          <div class=\"plan-card2 row mx-0\">\r\n            <div class=\"col-md-12 plan-card-col\">\r\n              <h6 class=\"text-20 font-weight-700 my-2 mb-4\">Select Payment Method</h6>\r\n\r\n              <button class=\"btn btn-danger rounded2 py-2 w-100 my-2\" v-for=\"payment_method in payment_methods\" @click=\"setRazorpay(payment_method);crnt_tab='pay'\">{{payment_method.name}}</button>\r\n              <h6 class=\"text-center text-12 mt-2\" @click=\"crnt_tab='plans'\">Change plan</h6>\r\n\r\n              <div class=\"or-sec\">Or</div>\r\n              <div class=\"d-flex justify-content-center plans-social-icons my-3\" style=\"gap:20px;\">\r\n                <img src=\"/videoplay/images/apple.svg\" style=\"width:40px;\">\r\n                <img src=\"/videoplay/images/google.svg\" style=\"width:40px;\">\r\n                <img src=\"/videoplay/images/fb.svg\" style=\"width:40px;\">\r\n                <img src=\"/videoplay/images/twitter.svg\" style=\"width:40px;\">\r\n              </div>\r\n\r\n            </div>\r\n           \r\n\r\n          </div>\r\n        </div>\r\n\r\n        <div class=\"plan-sec2 px-3 mt-5\" v-if=\"crnt_tab=='pay'\">\r\n          <!--<h6 class=\"text-white text-11 font-weight-400 mb-2\">Step 3 of 3</h6>\r\n          <h6 class=\"text-white text-14 font-weight-500 mb-2\">Payment</h6>-->\r\n          <div class=\"plan-card2 row mx-0\">\r\n            <div class=\"col-md-12 plan-card-col\">\r\n              <h6 class=\"text-22 font-weight-600 my-2 mb-4\">{{current_method.name}}</h6>\r\n              <div class=\"text-center\">\r\n                <img :src=\"current_method.logo\" style=\"height:100px\">\r\n              </div>\r\n              <h3 class=\"text-success text-center\">{{current_plan.currency_symbol}}{{current_plan.price}}</h3>\r\n              <button class=\"btn btn-danger rounded2 py-2 w-100 my-2\" @click=\"purchasePlan()\" v-if=\"razorpay_options.key\">Pay Now</button>\r\n              <h6 class=\"text-center text-12 mt-2\" @click=\"crnt_tab='payment_methods'\">Change method</h6>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\n\r\nexport default {\r\n  props: ['edit','blocks','current_block'],\r\n  data() {\r\n    return {\r\n      start:false,\r\n      current_page:{},\r\n      menu_click:false,\r\n      c